<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>

		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<!-- Topo -->
		<%- include ../topo.ejs %>

		<div class="container">

				<% if (camposComErro) { %>
					<div class="row">
						<div class="col-md-12">
							<div class="alert alert-danger">
								<strong>Atenção!</strong>
								<ul>

									<% for(var i = 0; i < camposComErro.length; i++) { %>
									<li><%= camposComErro[i].msg %></li>
									<% } %>
								</ul>
							</div>
						</div>
					</div>
				<% } %>

				<div class="row">
	    		<div class="col-md-12">
	    			<form action="/noticias" method="post">
						<div class="form-group">
							<label for="titulo">Título:</label>
							<input type="text" class="form-control" id="titulo" name="titulo" value="<%= campos.titulo %>">
						</div>

						<div class="form-group">
							<label for="pwd">Resumo:</label>
							<input type="text" class="form-control" id="resumo" name="resumo" value="<%= campos.resumo %>">
						</div>

						<div class="form-group">
							<label for="pwd">Autor:</label>
							<input type="text" class="form-control" id="autor" name="autor" value="<%= campos.autor %>">
						</div>

						<div class="form-group">
							<label for="pwd">Data:</label>
							<input type="date" class="form-control" id="data_noticia" name="data_noticia" value="<%= campos.data_noticia %>">
						</div>

						<div class="form-group">
							<label for="pwd">Notícia:</label>
							<textarea class="form-control" id="noticia" name="noticia"><%= campos.noticia %></textarea>
						</div>

						<button type="submit" class="btn btn-default">Cadastrar</button>
					</form>
		    	</div>
	    	</div>
	    </div>

		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

	</body>
</html>
